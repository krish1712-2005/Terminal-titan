<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Live Text Preview with Counter</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    #preview {
      margin-top: 10px;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      background: #f9f9f9;
      min-height: 40px;
    }
    #counter {
      margin-top: 5px;
      font-size: 14px;
      color: #555;
    }
  </style>
</head>
<body>
  <h2>Live Text Preview with Counter</h2>
  
  <textarea id="inputText" rows="5" cols="40" placeholder="Type something..."></textarea>
  
  <div id="counter">Characters: 0</div>
  <h3>Preview:</h3>
  <div id="preview"></div>

  <script>
    const inputText = document.getElementById("inputText");
    const preview = document.getElementById("preview");
    const counter = document.getElementById("counter");

    inputText.addEventListener("input", () => {
      const text = inputText.value;
      preview.textContent = text;
      counter.textContent = "Characters: " + text.length;
    });
  </script>
</body>
</html>
